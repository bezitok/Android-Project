<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_hoten"
        android:text="Họ tên"
        android:textSize="40sp"
        android:textColor="#ff00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_namsinh"
        android:text="Năm sinh: 2017"
        android:textSize="30sp"
        android:textColor="#0073FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_diachi"
        android:text="Địa chỉ: Hà Nội"
        android:textSize="40sp"
        android:textColor="#FF6F00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_email"
        android:text="Email: bezitok@gmail.com"
        android:textSize="30sp"
        android:textColor="#2FFF00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>