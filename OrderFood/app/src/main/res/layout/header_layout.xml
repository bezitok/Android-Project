<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/lightblue"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawerLayout_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:src="@drawable/baseline_account_circle_white_48"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:id="@+id/drawerLayout_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawerLayout_image"
        android:layout_alignStart="@id/drawerLayout_image"
        android:layout_alignLeft="@id/drawerLayout_image"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"/>

</RelativeLayout>